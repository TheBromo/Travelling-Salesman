<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.bbw.FXMLDocumentController">
   <children>
      <VBox layoutX="600.0" prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: lightgrey;">
         <children>
            <Button mnemonicParsing="false" onAction="#handleButtonCalculate" prefHeight="26.0" prefWidth="202.0" text="Calculate">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <HBox prefHeight="24.0" prefWidth="200.0">
               <children>
                  <RadioButton fx:id="random" mnemonicParsing="false" selected="true" text="Random">
                     <toggleGroup>
                        <ToggleGroup fx:id="searchtype" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="greedy" mnemonicParsing="false" text="Greedy" toggleGroup="$searchtype" />
                  <RadioButton fx:id="tour" mnemonicParsing="false" text="Tour" toggleGroup="$searchtype" />
               </children>
            </HBox>
            <Label fx:id="distance" prefHeight="18.0" prefWidth="197.0" text="Distance:" />
            <Button mnemonicParsing="false" onAction="#handleButtonImport" prefHeight="26.0" prefWidth="200.0" text="Import">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <ScrollPane prefHeight="200.0" prefWidth="200.0">
               <content>
                  <Label fx:id="log" alignment="TOP_LEFT" prefHeight="1000.0" prefWidth="180.0" style="-fx-background-color: white;" wrapText="true" />
               </content>
            </ScrollPane>
            <Button mnemonicParsing="false" onAction="#handleButtonExport" prefHeight="26.0" prefWidth="202.0" text="Export">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin></Button>
            <HBox prefHeight="34.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="amount" prefHeight="26.0" prefWidth="98.0" promptText="Amount" />
                  <Button mnemonicParsing="false" onAction="#handleButtonGenerate" text="Generate">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="21.0" prefWidth="200.0">
               <children>
                  <CheckBox fx:id="showNumbers" mnemonicParsing="false" onAction="#showNumbersClicked" text="Show Numbers" />
                  <CheckBox mnemonicParsing="false" fx:id="showPaths" onAction="#showPath" prefHeight="18.0" prefWidth="88.0" text="Show Path" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </HBox>
            <Button mnemonicParsing="false" onAction="#handleButtonReset" prefHeight="26.0" prefWidth="220.0" text="reset" />
         </children>
      </VBox>
      <Canvas fx:id="canvas" height="600.0" onMouseClicked="#handleMouseClicked" onMouseMoved="#handleMouseMoved" width="600.0" />
   </children>
</AnchorPane>
